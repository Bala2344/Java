package test;

public class ReverseNumber {

	public static void main(String[] args) {
		
		int a = 577878;
		
		int temp = a;
		
		int rev = 0;
		
		while (a>0) {
			
			int rem = a%10;
			
			rev = (rev*10)+rem;
			
			a=a/10;
			
		}
		System.out.println(rev);
		if (temp ==rev) {
			System.out.println("Given number is palindrome : "+temp);
		}else {
			System.out.println("Given number "+temp+" is not in palindome");
		}
			
		}
	}

